/= render 'user/welcome_user_box'
%h3
  = link_to "Back to home", root_path
%h3
  %center
    Welcome to your dashboard ....
.bs-example
  %ul.nav.nav-tabs.dashboard-tabs
    %li.active
      = link_to "Profile", "#profile", :data => {:toggle => 'tab'}
    %li
      = link_to "Add new advert", "#new_advert", :data => {:toggle => 'tab'}
    %li
      = link_to "All my adverts", "#all_adverts", :data => {:toggle => 'tab'}
  .tab-content
    #profile.tab-pane.fade.in.active
      = render 'shared/edit_profile'
    #new_advert.tab-pane.fade
      %h3
        Add new advert
      = simple_form_for Advert.new do |f|
        = f.input :title
        = f.input :description, as: :text, row: 10
        = f.association :category
        = f.input :payment_method, as: :check_boxes, collection: Advert::PAYMENT.map{|m| [m[:name],m[:id]]}
        = f.input :commentable, as: :boolean
        = f.input :address
        = f.input :location
        = f.input :phone_number
        = f.submit "Postavi oglas"
    #all_adverts.tab-pane.fade
      - if @all_my_adverts.blank?
        %h3
          Niste postavili ni jedan oglas 
      - else
        - @all_my_adverts.each do |advert|
          .container#my-adverts
            .col-lg-12
            .panel.panel-default
              .panel-body
                .panel-header
                  %h3
                    %center 
                      = advert.title
                %h4
                  = advert.description.truncate 25
                  /TODO Postaviti Profil sliku za oglas
                .panel-side.pull-right
                  %h5
                    Kontakt:
                    = advert.phone_number
                  %h5
                    Lokacija:
                    = advert.location
                  %h5
                    Adresa:
                    = advert.address
                  %h6
                    = link_to "Pogledaj detaljnije..", advert, id: "detaljnije-#{advert.id}"

= render 'shared/modals/preview_profile'

